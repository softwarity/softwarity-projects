{
  "name": "@softwarity/projects",
  "version": "1.0.8",
  "description": "A menu button Web Component built from Markdown with hierarchical navigation",
  "type": "module",
  "main": "./dist/softwarity-projects.js",
  "module": "./dist/softwarity-projects.js",
  "types": "./types/softwarity-projects.d.ts",
  "exports": {
    ".": {
      "import": "./dist/softwarity-projects.js",
      "types": "./types/softwarity-projects.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "types"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir types",
    "preview": "vite preview",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/softwarity/projects.git"
  },
  "keywords": [
    "web-component",
    "menu",
    "markdown",
    "navigation",
    "dropdown"
  ],
  "author": "Softwarity",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/softwarity/projects/issues"
  },
  "homepage": "https://github.com/softwarity/projects#readme",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "minify-literals": "^1.0.10",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  }
}
